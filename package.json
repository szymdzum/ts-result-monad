{
  "name": "ts-result-monad",
  "version": "1.0.0",
  "description": "A lightweight, zero-dependency TypeScript implementation of the Result monad pattern for elegant error handling without exceptions.",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "node .scripts/preinstall.js",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "lint:all": "biome check --apply-unsafe . && biome format --write .",
    "clean": "rimraf dist",
    "prepare": "husky",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "ci": "pnpm run lint && pnpm run test:coverage && pnpm run build"
  },
  "keywords": [
    "typescript",
    "monad",
    "result",
    "error-handling",
    "functional-programming"
  ],
  "author": "szymdzum",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "terser": "^5.39.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szymdzum/ts-result-monad.git"
  },
  "bugs": {
    "url": "https://github.com/szymdzum/ts-result-monad/issues"
  },
  "homepage": "https://github.com/szymdzum/ts-result-monad#readme",
  "lint-staged": {
    "*.{js,ts}": [
      "biome check --apply",
      "biome format --write"
    ]
  }
}
